@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
<p><a asp-action="Register">Add A User</a></p>
@{
    if (Model.Count() < 1)
    {
        <p>No Users in Database Yet.</p>
    }
    else
    {
        <h3>All Users</h3>
        <table class="table">
            <thead>
            <tr>
                <th>User Name</th>
                <th>Add Role</th>
            </tr>
                </thead>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td><a asp-controller="Role" asp-action="AddUserRole" asp-route-id="@user.Id">Add a Role</a></td>
                </tr>
            }
        </table>
    }
}